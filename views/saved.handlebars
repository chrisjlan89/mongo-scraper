<div class="modal fade" id="newnote" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-color modal-content">
      <div class="modal-header">
        <h5 class="custom-modal-title modal-title" id="exampleModalLabel">New Note</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
          
            <h6 class = "notes">
             {{#with  }}
            </h6>
            {{!-- ADD THE NOTES ALREADY ON THE DOC HERE --}}
            
          </div>
          <div class="form-group">
            <label for="message-text" class="custom-msg-text col-form-label">Message:</label>
            <textarea class="form-control" id="message-text"></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button id="addnote" type="button" class="btn btn-primary">Add Note</button>
      </div>
    </div>
  </div>
